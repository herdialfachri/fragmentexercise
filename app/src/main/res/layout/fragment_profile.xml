<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingHorizontal="16dp">

        <ImageView
            android:id="@+id/settingBtn"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/baseline_settings_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/profileTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="My Profile"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <ImageView
            android:id="@+id/userIv"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/baseline_account_circle_24" />

        <TextView
            android:id="@+id/usernameTv"
            android:layout_below="@id/userIv"
            android:text="Username"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/technicianCard"
            android:layout_width="match_parent"
            android:backgroundTint="@color/primary"
            android:layout_below="@id/usernameTv"
            app:cardCornerRadius="16dp"
            android:layout_marginHorizontal="4dp"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/opportunityTv"
                    android:text="Are you a Technician?"
                    android:layout_width="wrap_content"
                    android:layout_alignTop="@id/joinBtn"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/opportunityDescTv"
                    android:text="Join and earn some nice benefits"
                    android:layout_width="wrap_content"
                    android:layout_below="@id/opportunityTv"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/joinBtn"
                    android:backgroundTint="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_margin="16dp"
                    android:text="Join Now"
                    android:textColor="@color/primary"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/profileCard"
            app:cardCornerRadius="16dp"
            android:layout_below="@id/technicianCard"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="1dp"
            app:cardMaxElevation="1dp"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/infoTv"
                    android:text="Profile Information"
                    android:layout_width="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/editIv"
                    android:src="@drawable/baseline_edit_24"
                    android:layout_alignTop="@id/infoTv"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/emailTv"
                    android:text="username@example.com"
                    android:layout_below="@id/infoTv"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/roleTv"
                    android:layout_below="@id/emailTv"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:text="Normal User"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/phoneTv"
                    android:layout_below="@id/roleTv"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:text="082122009090"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/domisiliTv"
                    android:layout_below="@id/phoneTv"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:text="Nanggeleng, Kota Sukabumi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/specializationTv"
                    android:textSize="14sp"
                    android:layout_below="@id/domisiliTv"
                    android:layout_marginTop="10dp"
                    android:text="Tukang Genteng"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</LinearLayout>