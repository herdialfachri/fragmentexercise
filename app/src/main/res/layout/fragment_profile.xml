<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:paddingHorizontal="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="My Profile" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="24dp"
        android:paddingBottom="16dp"
        android:paddingHorizontal="16dp">

        <ImageView
            android:id="@+id/userIv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_account_circle_24" />

        <TextView
            android:id="@+id/usernameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/userIv"
            android:layout_marginStart="12dp"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:textSize="15sp"
            android:layout_toEndOf="@id/userIv"
            android:text="Jhon Doe" />

        <TextView
            android:id="@+id/emailTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jhondoe@example.com"
            android:layout_below="@id/usernameTv"
            android:textSize="13sp"
            android:layout_alignStart="@id/usernameTv" />

        <TextView
            android:id="@+id/handphoneTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+6282100998877"
            android:layout_below="@id/emailTv"
            android:textSize="13sp"
            android:layout_alignStart="@id/usernameTv" />

        <ImageView
            android:id="@+id/editIv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/baseline_edit_24"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/usernameTv" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Akun"
        android:textStyle="bold"
        android:textSize="14sp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"/>

    <TextView
        android:id="@+id/pesanTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cara pesan"
        android:textSize="14sp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:drawablePadding="8dp"
        app:drawableEndCompat="@drawable/baseline_arrow_forward_ios_24"
        app:drawableStartCompat="@drawable/baseline_shopping_cart_24" />

    <TextView
        android:id="@+id/bayarTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cara bayar"
        android:textSize="14sp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:drawablePadding="8dp"
        app:drawableEndCompat="@drawable/baseline_arrow_forward_ios_24"
        app:drawableStartCompat="@drawable/baseline_payment_24" />

    <TextView
        android:id="@+id/bantuanTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pusat bantuan"
        android:textSize="14sp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:drawablePadding="8dp"
        app:drawableEndCompat="@drawable/baseline_arrow_forward_ios_24"
        app:drawableStartCompat="@drawable/baseline_help_24" />

    <TextView
        android:id="@+id/ajaktemanTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ajak teman, dapat voucher"
        android:textSize="14sp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:drawablePadding="8dp"
        app:drawableEndCompat="@drawable/baseline_arrow_forward_ios_24"
        app:drawableStartCompat="@drawable/baseline_group_24" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Info lainnya"
        android:textSize="14sp"
        android:textStyle="bold"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"/>

    <TextView
        android:id="@+id/kebijakanTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kebijakan privasi"
        android:textSize="14sp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:drawablePadding="8dp"
        app:drawableEndCompat="@drawable/baseline_arrow_forward_ios_24"
        app:drawableStartCompat="@drawable/baseline_privacy_tip_24" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/appMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/baseline_lightbulb_24"
            android:textSize="14sp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:drawablePadding="8dp"
            android:text="Matikan Lampu"/>

        <Switch
            android:id="@+id/switchTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:paddingEnd="8dp"
            android:layout_alignTop="@id/appMode"
            android:layout_alignBottom="@id/appMode"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_margin="16dp"
            android:padding="14dp"
            android:text="Sign Out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/switchTheme"/>
    </RelativeLayout>
</LinearLayout>